
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- 内容头部 /-->
<!-- 正文区域 -->
@section styles{
    <style>
        #loading {
            display: none;
            width: 100%;
            height: 100%;
            opacity: 0.4;
            filter: alpha(opacity=40);
            background: white;
            position: absolute;
            top: 0;
            left: 0;
            z-index: 2000;
        }
    </style>
}
<link href="~/js_css/paging.css" rel="stylesheet" />
<section class="content">
    <div class="" style="width: 122%;margin-left: -200px;">
        <div class="box-body">
            <div class="pull-left">
            </div>
            <div class="box-tools pull-right" style="margin-bottom: 17px;">
                <div class="has-feedback">
                    <ul>
                        <li>@*<input type="button" value="查询" data-toggle="modal" data-target="#editModal" class="btn btn-default" />*@</li>
                    </ul>
                </div>
            </div>
            <div class="row">
                <table id="ListTb" class="table table-bordered">
                    <tr>
                        <th>文件名</th>
                        <th>目录</th>
                        <th>修改时间</th>
                        <th>全名</th>
                        <th>操作</th>
                    </tr>
                </table>
                <div class="pagebox" style="height:30px;" id="box"></div>

                <script id="dataList" type="text/x-jquery-tmpl">
                    {{each  Data}}
                    <tr>
                        <td>${filename}</td>
                        <td>${path}</td>
                        <td>${time}</td>
                        <td>${fullname}</td>
                        <td><a href="/FileTxt/DownLoad?filename=${filename}" class="tagDelete" tid="${filename}">下载</a></td>
                    </tr>
                    {{/each}}
                </script>
            </div>
        </div>
    </div>
</section>
@section scripts{
    <script src="~/js_css/common.js"></script>
    <script src="~/js_css/jquery.tmpl.js"></script>
    <script src="~/js_css/paging.js"></script>

    <script type="text/javascript" charset="utf-8">
        var dic = {
            queryList: function () {
                _.queryList("/FileTxt/GetFileList", { "PageIndex": 0, "PageSize": 3 });
            }
        };
        $(document).ready(function () {
            dic.queryList();
        });
    </script>
}



